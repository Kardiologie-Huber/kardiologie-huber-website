    <header>
      <Navbar />
    </header>

    <main>
      {
        heroimage && (
          <div
            class={herotitle ? 'hero-image hero-image-large' : 'hero-image'}
            style={'background-image: url("/images/' + heroimage + '")'}
          >
            {herotitle && (
              <div class="container">
                <div class="row">
                  <div class="col-12 col-lg-8 col-xl-6">
                    <div class="hero-title">
                      <h1>{herotitle}</h1>
                    </div>

                    {herodescription && (
                      <div class="hero-description">
                        <p>{herodescription}</p>
                      </div>

                      <p class="text-center actions">
                        <a class="btn btn-secondary d-none d-md-inline-block"
                            aria-current="page"
                            role="button"
                            href="/termin-buchen"
                            target="_blank"
                            >Online Termin buchen</a>

                        <a
                            class="btn btn-primary"
                            aria-current="page"
                            role="button"
                            href="/leistungen"
                            >Meine Leistungen</a>
                      </p>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        )
      }
      <div class="container">
        <div class="row">
          <div class="col-12">
            <slot />
          </div>
        </div>
      </div>
    </main>

    <footer>
      <Footer />
    </footer>
  </body><script src={bootstrap}></script>
  <script
    src="https://kit.fontawesome.com/9fc80d8fb2.js"
    crossorigin="anonymous"></script>
