---
import Head from '../components/page/Head.astro';
import { getImage } from 'astro:assets';
import Navbar from '../components/page/Navbar.astro';
import Footer from '../components/page/Footer.astro';
import { Image } from 'astro:assets';
import bootstrap from 'bootstrap/dist/js/bootstrap.bundle.min.js?url';
import '../styles/styles.scss';
import { LATIDO } from '../constants';

const {
  title,
  description,
  heroimage,
  heroimagedarkness,
  herotitle,
  herosubtitle,
  herodescription,
  heroimageposition,
} = Astro.props;

let heroStyle = '';
if (heroimage) {
  const optimizedBackground = await getImage({
    src: heroimage,
    format: 'webp',
    width: 1920,
    height: 500,
  });
  heroStyle = `background-image: url(${optimizedBackground.src}); background-position: ${heroimageposition ?? 'center top'};'`;
}
---

<html lang="de">
  <head>
    <Head
      title={title ? title + ' | Kardiologie Huber' : 'Kardiologie Huber'}
      description={description}
    />
  </head>

  <body>
    <header>
      <Navbar />
    </header>

    <main>
      {
        heroimage && (
          <div
            class={herotitle ? 'hero-image hero-image-large' : 'hero-image'}
            style={heroStyle}
          >
            <div
              class="hero-image-overlay"
              style={'opacity: ' + (heroimagedarkness ?? 0)}
            />
            {herotitle && (
              <div class="container-fluid hero-container">
                <div class="row">
                  <div class="col-12 col-lg-8 col-xl-6 offset-lg-2 offset-xl-3">
                    <div class="hero-title">
                      <h1>
                        {herotitle}
                        <br />
                        {herosubtitle && (
                          <span class="hero-subtitle">{herosubtitle}</span>
                        )}
                      </h1>
                    </div>

                    {herodescription && (
                      <div class="hero-description">
                        <p set:html={herodescription} />
                      </div>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        )
      }
      <div class="container">
        <div class="row">
          <div class="col-12">
            <slot />
          </div>
        </div>
      </div>
    </main>

    <footer>
      <Footer />
    </footer>

    <!-- 100% privacy-first analytics -->
    <script
      data-collect-dnt="true"
      async
      src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
    <script
      data-collect-dnt="true"
      async
      src="https://scripts.simpleanalyticscdn.com/auto-events.js"></script>
  </body><script src={bootstrap}></script>
  <script
    src="https://kit.fontawesome.com/9fc80d8fb2.js"
    crossorigin="anonymous"></script>
</html>
